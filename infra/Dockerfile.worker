# Minimal worker image (customize as needed)
FROM python:3.11-slim

RUN apt-get update && apt-get install -y ffmpeg && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY infra/requirements.txt /app/infra/requirements.txt
RUN pip install -r /app/infra/requirements.txt

COPY . /app
CMD ["bash", "scripts/run_local.sh", "ai_teacher"]
